<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.lingview.dimstack.mapper.ArticleMapper">

    <resultMap id="articleDtoMap" type="xyz.lingview.dimstack.dto.request.ArticleDTO">
        <id property="id" column="id"/>
        <result property="article_id" column="article_id"/>
        <result property="title" column="title"/>
        <result property="excerpt" column="excerpt"/>
        <result property="image" column="image"/>
        <result property="date" column="date"/>
        <result property="author" column="author"/>
        <result property="category" column="category"/>
        <result property="alias" column="alias"/>
    </resultMap>

    <!-- 查询首页文章列表 -->
    <select id="selectArticlesForHomePage" resultMap="articleDtoMap">
        SELECT
        a.id,
        a.uuid,
        a.article_id,
        a.article_name AS title,
        a.excerpt,
        a.article_cover AS image,
        a.create_time AS date,
        u.username AS author,
        a.category,
        a.alias
        FROM article a
        JOIN user_information u ON a.uuid = u.uuid
        WHERE a.status = 1
        <if test="category != null and category != ''">
            AND a.category = #{category}
        </if>
        ORDER BY a.create_time DESC
        LIMIT #{param1}, #{param2}
    </select>

    <!-- 统计文章总数 -->
    <select id="countArticles" resultType="int">
        SELECT COUNT(*)
        FROM article a
        WHERE a.status = 1
        <if test="category != null and category != ''">
            AND a.category = #{category}
        </if>
    </select>

    <!-- 评论区 -->
    <select id="selectArticleByAlias" parameterType="string" resultType="xyz.lingview.dimstack.domain.Article">
        SELECT * FROM article WHERE alias = #{alias} AND status IN (1, 2)
    </select>
    <select id="selectArticleByArticleId" parameterType="string" resultType="xyz.lingview.dimstack.domain.Article">
        SELECT * FROM article WHERE article_id = #{articleId} AND status IN (1, 2)
    </select>

</mapper>
